<div class="eduardo">
<%= form_for @bidding, url: listing_biddings_path(listing_id: @bidding.listing_id) do |form| %>
  <div class="form-group">
    <%= form.label "Subject:" %> <br>
    <%= form.text_field :title, class: "col-sm-6"  %>
  </div>
  <div>
    <%= form.label "Description:" %> <br>
    <%= form.text_area :body, class: "col-sm-6" %>
  </div>
  <div class="form-group">
    <%= form.label "Upload images:" %> <br>
    <%= form.file_field :images, multiple: true %>
    <%= form.label "Budget: $" %>
    <%= Listing.find(@bidding.listing_id).budget %>
  </div>
  <div class="actions">
    <%= form.submit "Submit Offer" %>
  </div>
<% end %>
  </div>
